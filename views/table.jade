table.table.table-striped.table-bordered
  thead
    tr
      each column in table.columns()
        th= column.label
  tbody
    each row in data
      tr
        each column in table.columns()
          if column.primary
            td
              a(href=url(table, row, "edit"))= row[column.name]
          else
            td= row[column.name]

