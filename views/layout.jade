include helper
doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv="X-UA-Compatible", content="IE=edge")
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(name='description', content='')
    meta(name='author', content='')
    link(rel='shortcut icon', href=url('/favicon.ico'))
    title= ( title ? title + " | " : "" ) + brand_name
    mixin link("base.min.css")
    mixin link("bootstrap-theme.css")
    mixin link("gentle.css")
    block style
      style.
        body{padding-top: 70px;padding-bottom:30px;}
  body(role="document")
    .navbar.navbar-inverse.navbar-fixed-top(role="navigation")
      .container
        .navbar-header
          a.navbar-brand(href=url("/"))= brand_name
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            each t in tables
              if(t.permit("manage"))
                li(class = table && t.name == table.name ? "active" : undefined)
                  a(href=url(t))= t.alias
          ul.nav.navbar-nav.navbar-right
            if username
             li 
               a(href="#")= username
             li
               a(href=url("/logout")) Logout
            else
             li
               a(href=url("/login")) Login

    .container(role="main")
      block content
    .container
      hr
      .footer
        p &copy; #{brand_name} 2014
    mixin script('base.min.js')
    mixin script('locales/bootstrap-datetimepicker.zh-CN.js')
    mixin script('gentle.js')
